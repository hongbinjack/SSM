<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.mg.mybatis.mapper.UserMapper">

    <!--
    mapper接口和映射文件要保证两个一致
    1，mapper接口中的全类名和映射文件的namespace一致
    2，mapper接口中的方法的方法名要和映射文件中的sql的id一致
    -->
    <!-- int insertUserMapper-->
   <insert id="insertUser">
       insert into t_user values(null,'liu','hongbin1123',22,'男','2623484066@qq.com');
   </insert>
    
    <!--void updateUser();-->
    <update id="updateUser">
        update t_user set username='root',password='123' where id=3;
    </update>

    <!--void deleteUser();-->
    <delete id="deleteUser">
        delete from t_user where id=3;
    </delete>

    <!-- User getUserById()-->
    <!-- resultType:设置结果类型，即查询的数据要转换为java类型
         resultMap:自定义映射，处理多对一或一对多的映射关系
    -->
    <select id="getUserById" resultType="com.mg.mybatis.pojo.User">
        select * from t_user where id=1;
    </select>

    <!--List<User> getAllUser();
       先转换为实体类再放到List集合里面
    -->
    <select id="getAllUser" resultType="User">
    select * from t_user;
    </select>
</mapper>